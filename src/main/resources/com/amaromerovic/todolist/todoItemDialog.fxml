<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<DialogPane expanded="true" prefWidth="658.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amaromerovic.todolist.DialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <Label prefWidth="300" style="-fx-font-family: Ubuntu Regular; -fx-font-size: 15" text="Short Description: " GridPane.columnIndex="0" GridPane.rowIndex="0">
            <effect>
               <InnerShadow />
            </effect></Label>
            <TextField fx:id="shortDescriptionField" minHeight="40" style="-fx-font-family: Ubuntu Regular; -fx-font-size: 15;" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <effect>
               <InnerShadow>
                  <color>
                     <Color red="1.0" green="1.0" blue="1.0" />
                  </color></InnerShadow>
            </effect>
            <font>
               <Font size="14.0" />
            </font></TextField>
            <Label style="-fx-font-family: Ubuntu Regular; -fx-font-size: 15;" text="Details: " GridPane.columnIndex="0" GridPane.rowIndex="1">
            <effect>
               <InnerShadow />
            </effect></Label>
            <TextArea fx:id="detailsField" style="-fx-font-family: Ubuntu Regular; -fx-font-size: 15;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <effect>
               <InnerShadow>
                  <color>
                     <Color red="1.0" green="1.0" blue="1.0" />
                  </color>
               </InnerShadow>
            </effect>
            <font>
               <Font size="14.0" />
            </font></TextArea>
            <Label style="-fx-font-family: Ubuntu Regular; -fx-font-size: 15;" text="Date: " GridPane.columnIndex="0" GridPane.rowIndex="2">
            <effect>
               <InnerShadow>
                  <color>
                     <Color red="0.9736841917037964" green="0.009015594609081745" blue="0.009015594609081745" />
                  </color></InnerShadow>
            </effect></Label>
            <DatePicker fx:id="datePickerField" style="-fx-font-family: Ubuntu Regular; -fx-font-size: 15;" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <effect>
               <InnerShadow>
                  <color>
                     <Color red="1.0" green="1.0" blue="1.0" />
                  </color></InnerShadow>
            </effect></DatePicker>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <effect>
            <InnerShadow />
         </effect>
        </GridPane>
    </content>
</DialogPane>
